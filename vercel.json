{
  "rewrites": [
    { "source": "/summarize", "destination": "/api/summarize" },
    { "source": "/", "destination": "/api/index" }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { 
          "key": "Access-Control-Allow-Origin", 
          "value": "https://laadnanimoustapha.github.io" 
        },
        { 
          "key": "Access-Control-Allow-Methods", 
          "value": "GET,POST" 
        },
        { 
          "key": "Access-Control-Allow-Headers", 
          "value": "Content-Type" 
        }
      ]
    }
  ]
}
